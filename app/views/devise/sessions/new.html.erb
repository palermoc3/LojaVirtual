<div class="d-flex align-items-center mx-auto" style="padding: 15% 30%;">
  <main class="form-signin w-100 m-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-floating">
        <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
        <label for="floatingInput">Email </label>
      </div>
      <div class="form-floating mt-3 mb-4">
        <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password", autocomplete: "current-password" %>
        <label for="floatingPassword">Senha</label>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check text-start mt-3">
          <%= f.check_box :remember_me, class: "form-check-input", id: "flexCheckDefault" %>
          <%= f.label :remember_me, class: "form-check-label", for: "flexCheckDefault" %>
        </div>
      <% end %>

      <button class="btn btn-primary w-100 py-2 mt-3 mb-4" type="submit">Logar</button>
    <% end %>
    <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover mt-5" href="<%= new_user_registration_path %>">
      Criar Nova Conta
    </a>
    <p class="py-1"></p>
    <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover mt-5" href="<%= new_user_password_path%>">
      Esqueceu sua senha 
    </a>
    <p class="mt-5 mb-3 text-body-secondary text-center">© 2017–2023</p>
  </main>
</div>
