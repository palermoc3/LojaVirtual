<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<h1>Products</h1>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
      <% @products.each do |product| %>
         <div class="col">
          <div class="card shadow-sm">
<% if product.photo1.attached? %>
  <%= image_tag product.photo1, class: "img-fluid", style: "object-fit: cover; width: 100%; height: 225px;" %>
<% else %>
  <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
    <title>Placeholder</title>
    <rect width="100%" height="100%" fill="#55595c"></rect>
    <text x="50%" y="50%" fill="#eceeef" dy=".3em" text-anchor="middle" alignment-baseline="middle">Sem foto</text>
  </svg>
<% end %>






            <div class="card-body">
              <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-muted">9 mins</small>
                <%= link_to "Show this product", product %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
</div>

<%= link_to "New product", new_product_path %>
