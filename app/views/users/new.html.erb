<h1>Edit user</h1>

<div class="container mt-5">
  <div style="margin: 0 15%;">
    <%= form_with(model: @user) do |form| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group mt-5">
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name, class: "form-control mt-3" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :cpf, style: "display: block" %>
        <%= form.text_field :cpf, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :email, style: "display: block" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <!-- Uncomment the following block if needed -->
      <!--
      <div class="form-group my-5">
        <%= form.label :role, style: "display: block" %>
        <%= form.number_field :role, class: "form-control" %>
      </div>
      -->

      <div class="form-group my-5">
        <div class="row">
          <div class="col-md-9">
            <%= form.label :cep, style: "display: block" %>
            <%= form.text_field :cep, class: "form-control" %>
          </div>
          <div class="col-md-3">
            <%= form.label :state, style: "display: block" %>
            <%= form.collection_select(:state, %w[AC AL AP AM BA CE DF ES GO MA MT MS MG PA PB PR PE PI RJ RN RS RO RR SC SP SE TO], :to_s, :humanize, { prompt: true }, { class: 'form-control' }) %>
          </div>
        </div>
      </div>

      <div class="form-group my-5">
        <div class="row">
          <div class="col-md-9">
            <%= form.label :street, style: "display: block" %>
            <%= form.text_field :street, class: "form-control" %>
          </div>
          <div class="col-md-3">
            <%= form.label :number, style: "display: block" %>
            <%= form.number_field :number, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group my-5">
        <%= form.label :password, style: "display: block" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.label :password_confirmation, style: "display: block" %>
        <%= form.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="form-group my-5">
        <%= form.submit class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>

<br>

<div>
  <%= link_to "Back to users", users_path %>
</div>
